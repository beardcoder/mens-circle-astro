---
import type { FaqItem } from "../types";

type Props = {
  items: FaqItem[];
};

const { items } = Astro.props;
---

<section class="faq" id="c12" itemscope itemtype="https://schema.org/FAQPage">
  <h2 class="section__title reveal-text">HÃ¤ufige Fragen</h2>
  <div class="faq__grid">
    {items.map((item) => (
      <article class="faq__item reveal-card" itemprop="mainEntity" itemscope itemtype="https://schema.org/Question">
        <h3 class="faq__question" itemprop="name">{item.question}</h3>
        <div itemprop="acceptedAnswer" itemscope itemtype="https://schema.org/Answer">
          <p class="faq__answer" itemprop="text" set:html={item.answer}></p>
        </div>
      </article>
    ))}
  </div>
</section>
