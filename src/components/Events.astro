---
import type { Event } from "@app-types/pocketbase";
import EventCard from "./EventCard.astro";

type Props = {
  events: Event[] | null;
};

const { events } = Astro.props;
---

<section
  class="events"
  id="events"
>
  <header class="events__header">
    <div class="events__header-text reveal-text">
      <span class="events__label">NÃ„CHSTER TERMIN</span>
      <h2 class="section__title">Kommendes Treffen</h2>
    </div>
  </header>

  <div class="events__container">
    {
      events && events.length > 0 ? (
        events.map((event) => <EventCard event={event} />)
      ) : (
        <p class="events__empty">Aktuell sind keine Termine geplant.</p>
      )
    }
  </div>
</section>
