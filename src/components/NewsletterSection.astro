---
import NewsletterForm from "./NewsletterForm.astro";

type Props = {
  label: string;
  title: string;
  description: string;
  privacyHref: string;
};

const { label, title, description, privacyHref } = Astro.props;
---

<section
  class="newsletter"
  id="contact"
>
  <div class="newsletter__content">
    <div class="newsletter__text reveal-text is-visible">
      <span class="newsletter__label">{label}</span>
      <h2 class="section__title">{title}</h2>
      <p class="newsletter__description">{description}</p>
    </div>

    <NewsletterForm
      className="newsletter__form reveal-card is-visible"
      privacyHref={privacyHref}
    />
  </div>
</section>
